<section id="posts_list">
	<h3>Listing pots</h3>
	<%= link_to 'New Post', new_post_path %>	
	<ol>
		<% @posts.each do |post| %>
			<li>
				<p><%= post.title %></p>
				<p><%= post.text.split[0..6].join(" ").html_safe %></p>
				<p><%= link_to 'Show', post %></p>
				<p><%= link_to 'Edit', edit_post_path(post) %></p>
				<p><%= link_to 'Destroy', post_path(post), method: :delete, data: {confirm: 'Are you sure?'} %></p>
			</li>
		<% end %>
	</ol>
</section>